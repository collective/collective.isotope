<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    lang="en"
    metal:use-macro="context/main_template/macros/master"
    i18n:domain="plone">
<body>

<metal:content-core fill-slot="content-core">
<metal:block define-macro="content-core">

  <div metal:define-macro="text-field-view"
      id="parent-fieldname-text" class="stx"
      tal:define="text view/text"
      tal:condition="text"
      tal:attributes="class view/text_class">
    <div metal:define-slot="inside" tal:replace="structure text">The body</div>
  </div>

  <metal:listingmacro define-macro="listing">
    <tal:results define="results view/results">
      <tal:listing condition="results">

        <div class="grid js-isotope" metal:define-slot="entries" data-isotope-options='{"layoutMode": "masonry", "itemSelector": ".item", "percentPosition": true}'>
          <tal:repeat repeat="item results" metal:define-macro="entries">
            <div class="item" style="width:26%;text-align:center;background-color:#333333;color:white;border:1px solid red;padding:1em;margin:.5em;">
              <h3 tal:content="item/Title">[title]</h3>
              <p class="discreet" tal:content="item/Description">[description]</p>
            </div>
          </tal:repeat>
        </div>

      </tal:listing>

      <metal:empty metal:define-slot="no_items_in_listing">
        <p class="discreet"
            tal:condition="not: results"
            tal:content="view/no_items_message">
          There are currently no items in this folder.
        </p>
      </metal:empty>

    </tal:results>
  </metal:listingmacro>

</metal:block>
</metal:content-core>

</body>
</html>
